pipeline {
    agent any
    stages {
        stage('Build stage') {
            steps {
                echo 'This is a build stage'
                sh 'sleep 5'
            }
        }
        stage('Push stage') {
            steps {
                echo 'This is push stage'
                sh 'sleep 5'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'sonar'
                    withSonarQubeEnv('sonar') {
                        sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=sample_job_poojashree"
                    }
                }
            }
        }
        stage('Deploy stage') {
            steps {
                echo 'This is deploy stage'
                sh 'sleep 5'
            }
        }
    }
}
